<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextArea?>
<GridPane fx:id="gridPane" fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
>
    <Group fx:id="pagePrincipale">
        <Button  fx:id="bouttonCreer" minHeight="300" minWidth="500" onAction="#allerPageCreerPersonnage" >CrÃ©er un nouveau personnage</Button>
    </Group>

    <Group fx:id="bouttonCreationPerso">

        <Button  fx:id="bouttonMage" minHeight="100" minWidth="100" onMouseEntered="#hooverBouttonChoixPersonnageMage" onMouseClicked="#creerMage" style="-fx-background-size: 100 100; " >Creer mage</Button>
        <Button  fx:id="bouttonGuerrier"  minHeight="100" minWidth="100" onMouseEntered="#hooverBouttonChoixPersonnageGuerrier" onMouseClicked="#creerGuerrier" style="-fx-background-size: 100 100;">Creer guerrier</Button>
        <Button  fx:id="bouttonChasseur"  minHeight="100" minWidth="100" onMouseEntered="#hooverBouttonChoixPersonnageChasseur" onMouseClicked="#creerChasseur" style="-fx-background-size: 100 100; ">Creer chasseur</Button>


    </Group>

    <Group fx:id="descriptionCreationPerso" >
        <Label minWidth="500" style="-fx-background-color:white" visible="false" fx:id="descriptionChasseur">Le chasseur</Label>
        <Label minWidth="500" style="-fx-background-color:white" visible="false" fx:id="descriptionMage"></Label>
        <Label minWidth="500" style="-fx-background-color:white" visible="false" fx:id="descriptionGuerrier">Le guerrier</Label>
    </Group>


    <Group fx:id="nomCreationPerso" visible="false" >
        <TextArea fx:id="entrerNomPerso" maxWidth="300" maxHeight="20"></TextArea>
        <Button  fx:id="validerNom"  minHeight="36" minWidth="100" onMouseClicked="#pageDescriptionPerso" >Valider</Button>
    </Group>

    <Group fx:id="AffichagePerso" visible="false" >

    </Group>



</GridPane>